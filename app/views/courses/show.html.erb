<% if notice %>
<p id="notice"><%= notice %></p>
<% end %>

<p>
  <b>Title:</b>
  <%= @course.title %>
</p>

<p>
  <b>Author:</b>
  <%= @course.author %>
</p>

<p>
  <b>Price:</b>
  <%= number_to_currency(@course.price) %>
</p>

<p>
  <b>Credit:</b>
  <%= @course.credit %>
</p>

<p>
  <b>Survey:</b>
  <%= @course.survey_id %>
</p>

<p>
  <b>Content:</b>
  <%= @course.content %>
</p>

<p>
  <b>Pdf:</b>
  <%= link_to 'PDF Version of Course Content', @course.document.url %><br/>
  <b>&nbsp;Save Location</b>
  <%= @course.document %>
</p>

<p>
  <b>Photo:</b>
  <%= image_tag(@course.photo.url, class: 'list_image') %></br>
  <b>&nbsp;Save Location</b>
  <%= @course.photo %>
</p>



