<h1>Listing courses</h1>

<table>
<% @courses.each do |course| %>
<tr class="<%= cycle('list_line_odd', 'list_line_even') %>">
  <td>
    <td>
        <%= image_tag(course.photo.url, class: 'list_image') %>
    </td>
  </td>

  <td class="list_description">
    <dl>
        <dt><%= course.title %></dt>
        <dd><%= truncate(strip_tags(course.description),length: 200) %></dd>
    </dl>
  </td>

  <td class="list_actions">
    <%= link_to("Show", {:action => 'show', :id => course.id}, :class => 'action show') %><br/> 
    <%= link_to('Pdf', {:action => 'content', :id => course.id} ) %><br/>
    <%= link_to("Edit", {:action => 'edit', :id => course.id}, :class => 'action edit') %><br/>
    <%= link_to('Destroy', {:action => 'destroy', :id => course.id}) %><br/>
  </td>
</tr>

<% end %>
</table>

<br />

<%= link_to 'New Course', new_course_path %>




